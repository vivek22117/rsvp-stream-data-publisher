{
  "variables": {
    "ami_name": "ci-cd-node-{{isotime `2006-01-02`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "eks-admin",
      "region": "{{user `region`}}",
      "instance_type": "t2.small",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-*-ebs",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "ssh_username": "ec2-user",
      "ami_name": "ami-codedeploy-java8",
      "ami_description": "Amazon Linux Image with CodeDeploy and java8",
      "run_tags": {
        "Name": "packer-builder",
        "Project": "DoubleDigit-Solutions"
      },
      "tags": {
        "CreationDate": "{{isotime `2006-01-02`}}",
        "Tool" : "Packer",
        "Author" : "Vivek",
        "Name": "Bastion-AMI",
        "Project": "DoubleDigit-Solutions",
        "Purpose": "App-Server"
      }
    }
  ],
  "provisioners": [
    {
      "type" : "file",
      "source" : "./telegraf.conf",
      "destination" : "/tmp/telegraf.conf"
    },
    {
      "type" : "shell",
      "script" : "./setup.sh",
      "execute_command" : "sudo -E -S sh '{{ .Path }}'"
    }
  ]
}
